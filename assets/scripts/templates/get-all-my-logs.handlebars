<!-- this template first checks to see if the user has made any logs.
If not, logs is falsey and the user recieves a message that they've never posted a log. -->

{{#if logs}}

{{#each logs as |log|}}

  <section data-id={{log._id}} class="log">
    <div class="log-header">
      <h4>{{log.owner.username }}</h4>
    </div>
    <div class="log-body">
      <p id="log-date">{{limit log.createdAt 10}}</p>
      <h6>Title: {{log.title}}</h6>
      <h6>Notes: {{log.text}}</h6>
      <audio id="audio-player" controls>
        <source id="audio-upload" src={{log.link}} type="audio/ogg">
          <source src="" type="audio/mpeg">
            Your browser does not support the audio element.
      </audio>
    </div>
    <div>
      <button class='update-log'>Edit</button><button class='delete-log'>Delete</button>
    </div>
  </section>

{{/each}}

{{else }}
  <div class="no-post-message">You've never posted!</div>

{{/if}}
